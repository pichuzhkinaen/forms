include mixins

doctype html
html(lang="ru")
	head 
		block head
			meta(name='viewport', content='width=device-width, initial-scale=1')
			meta(charset="UTF-8")
			title #{pageTitle}
			link(href="styles/main.min.css?v="+ versionFiles, rel="stylesheet")
			

	body
		div.wrapper
			form#form.form(action="")
				div.form__group
					label.form__input-label(for="name") Name
					input.form__input(type="text" id="name" name="name" placeholder="Jon Bold")
				div.form__group
					label.form__input-label(for="email") Email
					input.form__input(type="email" id="email" name="email" placeholder="email@email.com")
				div.form__group
					label.form__input-label(for="phone") Phone
					input.form__input(type="tel" id="phone" name="phone" placeholder="+7 (___) ___ - __ - __")
				div.form__group
					span.form__group-title checkbox
					div.form__checkbox-group
						label.form__input-label(for="checkbox") option-1
						input.form__input(type="checkbox" id="checkbox" name="option-1" value="option-1")
					div.form__checkbox-group
						label.form__input-label(for="checkbox") option-2
						input.form__input(type="checkbox" id="checkbox" name="option-2" value="option-2")
					div.form__checkbox-group
						label.form__input-label(for="checkbox") option-3
						input.form__input(type="checkbox" id="checkbox" name="option-2" value="option-3")
				div.form__group
					span.form__group-title Radio
					div.form__radio-group
						label.form__input-label(for="radio") option-1
						input.form__input(type="radio" id="radio" name="option-1" value="option-1")
					div.form__radio-group
						label.form__input-label(for="radio") option-2
						input.form__input(type="radio" id="checkbox" name="option-2" value="option-2")
					div.form__radio-group
						label.form__input-label(for="radio") option-3
						input.form__input(type="radio" id="radio" name="option-2" value="option-3")

		block scripts
			script(src="scripts/main.min.js?v=" + versionFiles)